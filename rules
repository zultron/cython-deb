#!/usr/bin/make -f
# -*- makefile -*-

DEB_PYTHON_SYSTEM=pycentral

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk

configure/cython::
	QUILT_PATCHES=debian/patches quilt push -a || test $$? = 2

clean::
	QUILT_PATCHES=debian/patches quilt pop -a -R || test $$? = 2

install/cython::
	dh_installman debian/cython.1

get-orig-tarball:
	version=0.9.6.10;\
	wget http://www.cython.org/Cython-$${version}.zip;\
	unzip Cython-$${version}.zip;\
	tar czf cython_$${version}.ds.orig.tar.gz Cython-$${version};\
	rm -rf Cython-$${version} Cython-$${version}.zip
